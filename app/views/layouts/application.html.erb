<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul>
        <% if admin_signed_in? %>
          <li><%= link_to "受注一覧", admins_orders_path %></li>
          <li><%= link_to "商品登録", new_admins_item_path %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
        <% elsif end_user_signed_in? %>
          <li><%= link_to "マイページ", end_users_path %></li>
          <li><%= link_to "カート一覧", cart_items_path %></li>
          <li><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "ログイン", new_end_user_session_path %></li>
          <li><%= link_to "会員登録", new_end_user_registration_path %></li>
        <% end %>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>
